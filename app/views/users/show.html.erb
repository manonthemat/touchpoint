<h1>Your touchPOINTS for the week of <%= Time.now.beginning_of_week.strftime("%B%e, %Y") %></h1>

<% @contacts.each do |contact| %>
  <ul>
    <li><%= contact.fname %> <%= contact.lname %> <%= contact.id %></li>
    <ul>
      <% @touches.each do |t| %>
        <% if t.contact == contact && t.due_date.cweek <= Date.today.cweek %>
        <li><%= t.type %></li>
        <ul>
          <li><%= t.due_date.strftime("%B%e") %></li>
          <li><%= "Not complete" if !t.complete? %></li>
        </ul>
        <% end %>
      <% end %>
    </ul>
  </ul>
<% end %>

<% @touches.each do |touch| %>
  <ul>
    <li><%= touch.description %></li>
    <ul>
      <li><%= touch.contact.fname %></li>
      <li><%= touch.due_date.strftime("%B%e") %></li>
      <li><%= touch.recurrence %></li>
    </ul>
  </ul>
<% end %>

<%= link_to "Create a new touchPOINT", new_user_touch_path(current_user.id) %>