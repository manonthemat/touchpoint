<!DOCTYPE html>
<html>
<head>
  <title>touchPOINT</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<nav>
  <% if current_user %>
    Welcome, <%= current_user.fname %>!
      <ul>
      <li><%= link_to "Log out", session_path, method: :delete %></li>
    <%else %>
      <li><%= link_to "Sign up", new_user_path if !@is_signup %></li>
      <li><%= link_to "Log in", new_session_path if !@is_login %></li>
    </ul>
  <% end %>
</nav>

  <%= yield %>

</body>
</html>
