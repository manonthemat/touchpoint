<div class="container">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4">
      <h1 class="lighter_font text-center">Sign in to <span class="text-primary">touchPOINT</span></h1>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-4 col-sm-offset-4 form_styles">
          
      <%= form_for @user, {url: session_path, method: :post} do |f| %>

        <% if @user.errors.any? %>
          <div id="error_explanation">
            
            <ul class="list-group">
              <% @user.errors.full_messages.each do |msg| %>
                <li class="list-group-item list-group-item-danger"><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <%= f.text_field :email, placeholder: "email address", class: 'form-control', type: 'email' %>
        </div>
        <div class="form-group">
          <%= f.password_field :password, placeholder: "password", class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.submit "Sign in", class: 'btn btn-primary btn-large' %>
        </div>
      <% end %>
    </div>
  </div>
</div>